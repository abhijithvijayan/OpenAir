{
  "name": "openair",
  "version": "1.0.0",
  "private": true,
  "author": "abhijithvijayan",
  "engines": {
    "node": ">=8 <=12"
  },
  "workspaces": {
    "packages": [
      "clients/mqtt/broker",
      "clients/mqtt/publisher/node-simulator",
      "clients/mqtt/subscriber",
      "clients/web"
    ],
    "nohoist": []
  },
  "scripts": {
    "dev:web": "yarn workspace @openair/web dev",
    "build:web": "yarn workspace @openair/web build",
    "broker": "yarn workspace @openair/broker broker",
    "publisher": "yarn workspace @openair/publisher publisher",
    "subscriber": "yarn workspace @openair/subscriber subscriber",
    "lint": "yarn workspaces run lint",
    "lint:fix": "yarn workspaces run lint:fix",
    "clean-up": "rm -rf node_modules clients/web/node_modules clients/mqtt/broker/node_modules clients/mqtt/publisher/node-simulator/node_modules clients/mqtt/subscriber/node_modules yarn.lock"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "babel-eslint": "10.0.3",
    "concurrently": "^5.0.2",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-onepass": "2.1.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "prettier": "^1.19.1"
  }
}
